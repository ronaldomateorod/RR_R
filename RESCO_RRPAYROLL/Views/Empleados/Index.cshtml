@model IEnumerable<RESCO_RRPAYROLL.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProvinciaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNacionalidadNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contratado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaContratacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBancoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoCuentaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CuentaBancaria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento, "{0:d}")
            </td>
            <td>
                    @if (item.Sexo == "M")
                    {
                        <text>Masculino</text>
                    }
                    else if (item.Sexo == "F")
                    {
                        <text>Femenino</text>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNacionalidadNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProvinciaNavigation.Nombre)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Contratado)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FechaContratacion, "{0:d}")
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBancoNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoCuentaNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CuentaBancaria)
                </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
