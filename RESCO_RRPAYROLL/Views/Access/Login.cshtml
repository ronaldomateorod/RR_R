@model RESCO_RRPAYROLL.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/RESCO_RRPAYROLL.styles.css" asp-append-version="true" />
    </head>
<body class="d-flex align-items-center vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="modal modal-content">
                        <form asp-controller="Access" asp-action="Login" method="post">
                            <div class="modal-header justify-content-center bg-body-secondary">
                                <h1>Login</h1>
                            </div>
                            @if (ViewData["ValidateMessage"] != null)
                            {
                                <label class="text-danger">@ViewData["ValidateMessage"]</label>
                            }
                            <div class="modal-body">
                                <div class="d-flex">
                                    <div class="fa fa-user-circle-o fa-4x mx-auto" aria-hidden="true"></div>
                                </div>
                                <div class="mt-3">
                                    <label class="form-label">Usuario</label>
                                    <input class="form-control" type="text" placeholder="Usuario" asp-for="Nombre" />
                                </div>
                                <div class="mt-3">
                                    <label class="form-label">Contraseña</label>
                                <input class="form-control" type="password" placeholder="Contraseña" asp-for="Contrasena" />
                                </div>
                            </div>
                            <div class="modal-footer mt-3 bg-body-secondary">
                                <button class="btn btn-success" type="submit">Ingresar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        

            
        <footer class="border-top footer text-muted position-fixed bottom-0 w-100">
            <div class="container">
                &copy; 2024 - RESCO_RRPAYROLL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>
